# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/whispernet

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
CORS_ORIGIN=*
API_KEYS=key1,key2,key3

# Payment Configuration (Stripe)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Email Configuration (SMTP)
EMAIL_FROM=noreply@whispernet.com
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# Storage Configuration (AWS S3)
STORAGE_TYPE=local
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET=your-bucket-name

# Logging Configuration
LOG_LEVEL=info

# Analytics Configuration
ANALYTICS_PROVIDER=internal
ANALYTICS_TRACKING_ID=your-tracking-id

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_SOCIAL_AUTH=false
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR=false
ENABLE_AR_FEATURES=true
ENABLE_GAMIFICATION=true
ENABLE_ANALYTICS=true

# Content Moderation
ENABLE_MODERATION=true
AUTO_MODERATE=true
PROFANITY_FILTER=true
SENSITIVE_CONTENT_DETECTION=true

# Cache Configuration
CACHE_TTL=3600
CACHE_CHECK_PERIOD=3600

# Media Processing
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4
